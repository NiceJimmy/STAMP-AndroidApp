<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    >
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"

    app:cardElevation="3dp"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp"

    android:orientation="vertical"
    app:cardCornerRadius="7dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="293dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/shop_imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/green_rectangle"
                android:orientation="vertical">


            </LinearLayout>


        </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="13dp">


                    <TextView
                        android:id="@+id/shop_name2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Hotel Surya Palace"
                        android:textColor="#4f4f4f"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="13dp">


                    <TextView
                        android:id="@+id/shop_address2"
                        android:layout_width="243dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_weight="1"
                        android:text="Alkapuri, Vadodara"
                        android:textColor="#aeaeae"
                        android:textSize="12.5sp" />

                </LinearLayout>


            </LinearLayout>

            <Button
                android:id="@+id/button5"
                android:layout_width="51dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:text="DEL"
                android:textColor="@color/cast_libraries_material_featurehighlight_text_header_color"
                />

        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>
</LinearLayout>