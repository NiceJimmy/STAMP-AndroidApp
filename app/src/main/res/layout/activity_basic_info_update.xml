<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom|end"
    android:layout_weight="5"
    >

    <EditText
        android:id="@+id/store_name2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="0.2"
        android:hint="매장명을 입력하세요"
        android:inputType="textPersonName" />

    <Spinner
        android:id="@+id/store_category2"
        android:entries="@array/category"
        android:layout_gravity="left"
        android:layout_weight="0.2"
        android:layout_width="166dp"
        android:layout_height="35dp" />

    <EditText
        android:id="@+id/store_tel2_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:hint="매장 연락처1"
        android:inputType="phone" />

    <EditText
        android:id="@+id/store_tel2_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:hint="매장 연락처2"
        android:inputType="phone" />

    <EditText
        android:id="@+id/store_desc2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:hint="매장 소개글 작성"
        android:inputType="textPersonName" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:layout_weight="2"
        android:orientation="vertical"></LinearLayout>

    <Button
        android:id="@+id/insert_store2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/colorAccent"
        android:text="UPDATE"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="20sp" />



</LinearLayout>
